@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Adress</th>
                                    <th scope="col">Telefon No</th>
                                    <th scope="col">E - Mail</th>
                                    <th scope="col">Alt Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Location</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Mail</td>
                                        <td>@item.FooterDescription</td>
                                        <td><a class="btn btn-outline-danger" href="/Contact/DeleteContact/@item.ContactID">Sil</a></td>
                                        <td><a class="btn btn-outline-success" href="/Contact/UpdateContact/@item.ContactID">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact" class="btn btn-outline-primary">Yeni İletişim Ekle</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


