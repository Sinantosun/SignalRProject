@model List<ResultCoponCodeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kupon Kod İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İndirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İndirim/Kupon İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz.
                            <br />
                            <strong>Indırımler % Olarak Hesaplanır.</strong>
                        </div><br />
                        <a href="/CouponCode/CreateCode" class="btn btn-outline-primary">Yeni Kupon Oluştur</a>
                        <br />
                        <table class="table mt-3 text-center">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CouponCodeID</td>
                                        <td>@item.Title</td>
                                        <td> <b>@item.Amout %</b></td>
                                        <td><a class="btn btn-outline-danger" href="/CouponCode/DeleteCode/@item.CouponCodeID">Sil</a></td>
                                        <td><a class="btn btn-outline-success" href="/CouponCode/UpdateCode/@item.CouponCodeID">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                  
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
