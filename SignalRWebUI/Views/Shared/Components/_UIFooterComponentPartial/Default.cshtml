@model List<ResultContactDto>
@foreach (var item in Model)
{
    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-col">
                    <div class="footer_contact">
                        <h4>
                            Bize Ulaşın
                        </h4>
                        <div class="contact_link_box">
                            <a href="@item.Location">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                   Lokasyon
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                   @item.Phone
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                    @item.Mail
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <div class="footer_detail">
                        <a href="/default/index" class="footer-logo">
                            @item.FooterTitle
                        </a>
                        <p>
                            @item.FooterDescription
                        </p>
                        <div class="footer_social">
                            @await Component.InvokeAsync("_UILayoutSocialMediaComponentPartial")
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <h4>
                        @item.OpenDays
                    </h4>
                    <p>
                        @item.OpenDescription
                    </p>
                    <p>
                       @item.OpenHours
                    </p>
                </div>
            </div>
            <div class="footer-info">
                <p>
                    &copy; <span id="displayYear"></span> Tüm Haklar Saklıdır.
                    <a href="https://html.design/">SignalR Restoran</a><br><br>
                    &copy; <span id="displayYear"></span> Geliştiren
                    <a href="https://themewagon.com/" target="_blank">Sinan Tosun</a>
                </p>
            </div>
        </div>
    </footer>
}
