@model List<SignalRWebUI.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Kategori İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz.
                           
                        </div><br />
                        <a href="/Category/CreateCategory" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
                        <br />
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.CategoryName</td>
                                        <td>@(item.Status == true ? "Aktif" : "Pasif")</td>
                                        <td><a class="btn btn-outline-danger" href="/Category/DeleteCategory/@item.CategoryID">Sil</a></td>
                                        <td><a class="btn btn-outline-success" href="/Category/UpdateCategory/@item.CategoryID">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                       
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
