@{
    Layout = null;
}
<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UIHeadComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")

    <section class="food_section layout_padding">
        <div class="container">
            <h4>Mesaj Sayfası</h4>

            <div class="container mt-5">
                <div class="row">
                    <div class="col-12">
                        <h5 class="text-center mb-4">Restoran Anlık Mesajlar</h5>
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-2">Kullanıcı Adınız:</div>
                    <div class="col-5"><input type="text" id="userinput" class="form-control" /></div>
                </div>
                <div class="row p-1">
                    <div class="col-2">Mesajınız</div>
                    <div class="col-5"><input type="text" class="form-control" id="messageinput" /></div>
                </div>
                <div class="row p-1">
                    <div class="col-2"></div>
                    <div class="col-3"><input type="button" value="Mesaj Gonder" class="btn btn-warning" id="sendmessage" /></div>
                </div>
                <div class="row p-1">
                    <div class="col-12">
                        <hr />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-12">
                        <ul class="list-group" id="messagelist">

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_UIFooterComponentPartial")

    @await Component.InvokeAsync("_UIScriptComponentPartial")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
</body>

</html>