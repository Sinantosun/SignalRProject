@model UpdateTestimonialDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans Ekleme İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Referans Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Ad</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Comment">Yorum | Açıklama</label>
                                <input type="text" class="form-control" asp-for="Comment" id="Comment">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Fotoğraf</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" asp-for="TestimonialID" >
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

