        <script type="text/javascript">
            $(document).ready(() => {
                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7189/SignalRHub").build();

                $("#connstatus").text(connection.state);

                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendIstastisc");
                    }, 1000)

                }).catch((err) => { console.log(err) });

                connection.on("ReciveCategoryCount", (value) => {
                    $("#categorycount").text(value);
                });
                connection.on("ReciveProductCount", (value) => {
                    $("#productcount").text(value);
                });
                connection.on("ReciveActiveCategoryCount", (value) => {
                    $("#ActiveCategoryCount").text(value);
                });
                connection.on("RecivePassiveCategoryCount", (value) => {
                    $("#PassiveCategoryCount").text(value);
                });

                connection.on("ReciveHamburgerCount", (value) => {
                    $("#HamburgerCount").text(value);
                });

                connection.on("ReciveDrinkCount", (value) => {
                    $("#DrinkCount").text(value);
                });

                connection.on("ReciveAvgProduct", (value) => {
                    $("#AvgCount").text(value + " ₺");
                });

                connection.on("ReciveExpensivePrdouct", (value) => {
                    $("#ExpensiveProduct").text(value);
                });

                connection.on("ReciveCheaperPrdouct", (value) => {
                    $("#CheaperProduct").text(value);
                });

                connection.on("ReciveHamburgerPrice", (value) => {
                    $("#HamburgerPrice").text(value + " ₺") ;
                });

                connection.on("ReciveTotelOrder", (value) => {
                    $("#TotalPrice").text(value);
                });

                connection.on("ReciveActiveOrder", (value) => {
                    $("#ActiveOrder").text(value);
                });

                connection.on("ReciveLastOrder", (value) => {
                    $("#LastOrder").text(value + " ₺");
                });

                connection.on("ReciveMoneyCase", (value) => {
                    $("#MoneyCase").text(value + " ₺");
                });

                connection.on("ReciveTodayProfit", (value) => {
                    $("#TodayProfit").text(value + " ₺");
                });

                connection.on("ReciveTableCount", (value) => {
                    $("#TableCount").text(value);
                });
            })
        </script>

