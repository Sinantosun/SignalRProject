@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Kayıt Formu</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Pizza1.jpg" style="width:484px; height:655px;" alt="form">
			</div>
			<form class="form-detail" method="post">
				<h2>Yeni Kullanıcı Kaydı</h2>
				<div class="form-row">
					<input type="text"  id="full-name" class="input-text" asp-for="Username" placeholder="Kullanıcı Adınız" required>
				</div>

				<div class="form-row">
					<input type="text"  id="full-name" class="input-text" asp-for="Name" placeholder="Adınız" required>
				</div>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" asp-for="Surname" placeholder="Soyadınız" required>
				</div>
				
				<div class="form-row">
					<input type="password" id="full-name" class="input-text" asp-for="Password" placeholder="Şifre" required>
				</div>
				<div class="form-row">
					<input type="email" id="full-name" class="input-text" asp-for="Mail" placeholder="E Posta Adresiniz" required>
				</div>
				<div class="form-row-last">
					<input type="submit"  class="register" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
</body>
</html>