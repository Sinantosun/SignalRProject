@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çikan Ürünlerin Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Öne Çıkan Ürünlerle İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık 1</th>
                                    <th scope="col">Açıklama 1</th>
                                    <th scope="col">Başlık 2</th>
                                    <th scope="col">Açıklama 2</th>
                                    <th scope="col">Başlık 3</th>
                                    <th scope="col">Açıklama 3</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FeatureID</td>
                                        <td>@item.Title1</td>
                                        <td>@item.Description1</td>
                                        <td>@item.Title2</td>
                                        <td>@item.Description2</td>
                                        <td>@item.Title3</td>
                                        <td>@item.Description3</td>
                                        <td><a class="btn btn-outline-danger" href="/Feature/DeleteFeature/@item.FeatureID">Sil</a></td>
                                        <td><a class="btn btn-outline-success" href="/Feature/UpdateFeature/@item.FeatureID">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Feature/CreateFeature" class="btn btn-outline-primary">Yeni Öne Çıkan Ürün Ekle</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


